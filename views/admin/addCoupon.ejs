<%- include ('../layouts/adminHeader.ejs') %>


        <h4 class="text-center text-success my-5"> ADD COUPON</h4>
        <h4 class="text-center text-primary my-1">
            <%=message%>
        </h4>

        <form action="/admin/addCoupon" method="post" style="margin-left: 15%;width: 50%;">
            <!-- Email input -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="product_name">Coupon Name</label>
                    <br>
                <input type="text" id="addCategories" name="coupName"
                    class="form-control input-md highlight border-dark" placeholder="Enter coupon name"
                    required />
                    <label class="col-md-4 control-label" for="product_name">Discount</label>
                    <br>
                <input type="number" id="addCategories" name="coupDis"
                    class="form-control form-control-lg border-dark " placeholder="Enter discound"
                    required min="0"/>
                    <label class="col-md-4 control-label" for="product_name">Minimum Value</label>
                    <br>
                <input type="number" id="addCategories" name="coupMin"
                    class="form-control form-control-lg border-dark " placeholder="Minimum Value"
                    required min="0" />
                    <label class="col-md-4 control-label" for="product_name">Maximum Value</label>
                    <br>
                <input type="number" id="addCategories" name="coupMax"
                    class="form-control form-control-lg border-dark" placeholder="Maxiumum Value"
                    required min="0"/>
                    <label class="col-md-4 control-label" for="product_name">Date</label>
                    <br>
                <input type="date" id="addCategories" name="coupDate"
                    class="form-control form-control-lg border-dark" placeholder="Expiry Date" required />
                <span id="Email"></span>
            </div>

            <div style="display: flex; justify-content: space-between;">
                <a style="margin-left: 40%;"><button type="submit" class="btn-success rounded-2 p-2">Save</button></a>
        </form>
        <a style="margin-right: 40%;" href="/admin/loadCoupon"><button type="button"
                class="btn-primary rounded-2 p-2">cancel</button></a>

    </div>




    <style>
        .highlight {
            border-color: aliceblue;
            margin-top: 2%;
            margin-bottom: 2%;
        }
    </style>





    <%- include ('../layouts/adminFooter.ejs') %>